function exponentialSearch(arr, target):
    // If the target is found at the first index
    if arr[0] == target:
        return 0
    
    // Find range for binary search by repeated doubling
    n = length(arr)
    i = 1
    while i < n and arr[i] <= target:
        i = i * 2
    
    // Perform binary search in the identified range
    return binarySearch(arr, target, i/2, min(i, n-1))

function binarySearch(arr, target, start, end):
    if end >= start:
       mid = start + (end - start) / 2
       
       // If the target is found at the midpoint
       if arr[mid] == target:
           return mid
       
       // If the target is smaller than the midpoint, search the left subarray
       if arr[mid] > target:
           return binarySearch(arr, target, start, mid - 1)
       
       // If the target is larger than the midpoint, search the right subarray
       return binarySearch(arr, target, mid + 1, end)
    
    // If target is not present in the array
    return -1
